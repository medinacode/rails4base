<!DOCTYPE html>
<html>
<head>
    <title><%= APP_NAME %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- jQuery Plugins -->
    <%= javascript_include_tag '//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.2.0/bootbox.min.js' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-growl/1.0.0/jquery.bootstrap-growl.min.js' %>

    <script type="text/javascript">
        $(document).ready(function() {
            <%= "$.bootstrapGrowl('<i class=\"fa fa-info\"></i> &nbsp;#{flash[:info]}', { type: 'info', align: 'center', allow_dismiss: false });".html_safe if flash[:info] %>
            <%= "$.bootstrapGrowl('<i class=\"fa fa-check\"></i> &nbsp;#{flash[:success]}', { type: 'success', align: 'center', allow_dismiss: false });".html_safe if flash[:success] %>
            <%= "$.bootstrapGrowl('<i class=\"fa fa-times\"></i> &nbsp;#{flash[:error]}', { type: 'danger', align: 'center', allow_dismiss: false });".html_safe if flash[:error] %>
        })
    </script>

</head>
<body>
<%= render 'layouts/partials/header' %>
<div class="container" id="page">
    <%= yield %>
</div>
<%= render 'layouts/partials/footer' %>
</body>
</html>
